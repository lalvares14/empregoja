<section id="jobs">
  <% @jobs.each do |job| %>
    <div class="jobs">
      <h3><%= job.title %></h1>
      <p><%= job.location %></p>
      <p><%= job.company.name %></p>
      <p><%= job.category.name %></p>
      <%= link_to 'Ver mais', job %>
    </div>
  <% end %>
</section>

<aside>

  <h3>Empresas:</h3>
  <% @companies.each do |company| %>
    <%= link_to company.name, company %>
  <% end %>

  <h3>Categorias:</h3>
  <% @categories.each do |category| %>
    <%= link_to category.name, category %>
  <% end %>

</aside>
